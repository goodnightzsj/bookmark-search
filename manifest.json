{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "default_locale": "zh_CN",
  "version": "1.8.0",
  "description": "__MSG_appDesc__",
  "permissions": [
    "bookmarks",
    "storage",
    "unlimitedStorage",
    "activeTab",
    "commands",
    "scripting",
    "tabs",
    "alarms",
    "favicon"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "__MSG_appName__"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "options_page": "settings.html",
  "commands": {
    "toggle-overlay": {
      "suggested_key": {
        "default": "Ctrl+Space",
        "mac": "Command+Space"
      },
      "description": "__MSG_commandToggleOverlay__"
    }
  }
}
