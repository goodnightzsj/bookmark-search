{
  "name": "书签搜索",
  "description": "管理书签",
  "version": "1.2",
  "manifest_version": 3,
  "permissions": [
    "bookmarks",
    "storage",
    "activeTab",
    "commands",
    "scripting",
    "notifications",
    "tabs"
  ],
  "options_page": "settings.html",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "书签搜索"
  },
  "commands": {
    "toggle-overlay": {
      "suggested_key": {
        "default": "Ctrl+Space",
        "mac": "Command+Space"
      },
      "description": "呼出搜索框"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ]
}
